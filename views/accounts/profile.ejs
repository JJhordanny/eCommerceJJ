<% layout('layout') -%>

<div class="container">

  <div class="row">
    <div class="col-sm-6 col-md-4">
      <img src="<%= user.profile.picture %>" alt="" class="img-circle img-responsive img-center" />
      </br>
      <p>Nombre: <%= user.profile.name %></p>
      <p>Correo: <%= user.email %></p>

      <% if (user.address === "" || typeof user.address === 'undefined') { %>
        <p>Diracción: <span style="color: #c0392b; font-weight: bold">Usted no tiene dirección!</span></p>

        <% } else { %>
          <p>Dirección: <%= user.address %></p>
        <% } %>

       <a href="/edit-profile" class="btn btn-primary btn-lg">Editar Perfil</a>
    </div>
  </div>

</div>
