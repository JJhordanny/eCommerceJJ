<% layout('layout') -%>

<div class="jumbotron" id="navbar-gap">
  <div class="container">
    <h1 class="text-center">Encuentra tu producto favorito!</h1>
    <p class="text-center">Buscar diferentes productos en tu tienda APEC Online</P>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="input-group col-md-12">
          <input type="text" name="search_term" class="form-control input-lg">
          <span class="input-group-btn">
            <button type="button" class="btn btn-primary btn-lg"><i class="glyphicon glyphicon-search"></i></button>
          </span>
        </div>
      </div>
    </div>

  </div>
</div>

<div class="container">
  <div class="row">
    <% for (var i = 0; i < products.length; i++) { %>
      <div class="col-md-4">
        <a href="/product/<%= products[i]._id %>">
          <div class="thumbnail">
            <img src="<%= products[i].image %>"/>
            <div class="caption">
              <h3><span style="font-weight: bold"><%= products[i].name %></span></h3>
              <h3><%= products[i].category.name %></h3>
              <h3>$<%= products[i].price %></h3>
            </div>
          </div>
        </a>
      </div>
    <% } %>

    <ul class="pagination text-center">
      <li>
        <% for(var i = 1; i <= pages; i++) { %>
        <% if (i === 1) { %>
          <li><a href="/"><%= i %></a></li>
          <% } else { %>
            <li><a href="/page/<%= i %>"><%= i %></a></li>
            <% } %>
        <% } %>
      </li>
    </ul>

  </div>
</div>
