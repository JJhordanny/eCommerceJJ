<% layout('layout') -%>

<div class="jumbotron" id="navbar-gap">
  <div class="container">
    <h1>Compra Inteligente, Ahorrando Tiempo!</h1>
    <p>Encuentra tu producto favorito</P>
    <!-- <p><a class="btn btn-primary btn-lg" href="/signup" role="button">Regitrarse &raquo;</a></p> -->
  </div>
</div>

<div class="container">
  <div class="row">
    <% for (var i = 0; i < products.length; i++) { %>
      <div class="col-md-4">
        <a href="/product/<%= products[i]._id %>">
          <div class="thumbnail">
            <img src="<%= products[i].image %>"/>
            <div class="caption">
              <h3><span style="font-weight: bold"><%= products[i].name %></span></h3>
              <h3><%= products[i].category.name %></h3>
              <h3>$<%= products[i].price %></h3>
            </div>
          </div>
        </a>
      </div>
    <% } %>

    <ul class="pagination text-center">
      <li>
        <% for(var i = 1; i <= pages; i++) { %>
        <% if (i === 1) { %>
          <li><a href="/"><%= i %></a></li>
          <% } else { %>
            <li><a href="/page/<%= i %>"><%= i %></a></li>
            <% } %>
        <% } %>
      </li>
    </ul>

  </div>
</div>
