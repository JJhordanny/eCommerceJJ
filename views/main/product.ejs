<% layout('layout') -%>

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <img src="<%= product.image %>" alt="product_image" />
    </div>

    <div class="col-md-4">

    </div>

    <div class="col-md-4">
      <h3><span style="font-weight: bold"><%= product.name %></span></h3>
      <h1>$<%= product.price %></h1>

      <form method="post">
        <div class="btn-group" role="group" aria-label="...">
          <input type="hidden" name="quantity" id="quantity" value="1"></input>
          <button type="button" id="minus" class="btn btn-default">-</button>
          <button type="button" id="total" class="btn btn-default">1</button>
          <button type="button" id="plus" class="btn btn-default">+</button>
        </div>

        <div class="form-group">
          <input type="hidden" name="product_id" id="quantity" value="<%= product._id %>"></input>
          <input type="hidden" name="priceHidden" id="priceHidden" value="<%= product.price %>"></input>

          <input type="text" name="item" class="form-control" value="<%= product.name %>"></input>
          <input type="text" name="priceValue" class="form-control" value="<%= product.price %>"></input>
        </div>

        <% if (user) { %>
          <button type="submit" class="btn btn-primary btn-lg">Agregar al Carrito</button>
        <% } else { %>
          <a href="/signup" class="btn btn-warning btn-lg">Registrese para iniciar a Comprar</a>
        <% } %>
      </form>

    </div>
  </div>
</div>
